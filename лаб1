#4
z=["admin", "root", "superuser"]
n=(input('Введите пароль'))
if len(n)<8:print('длина не должна быть меньше 8')
elif not any(c.isdigit() for c in n):print('пароль должен содержать хотя бы одну цыфру')
elif n in z:print('пароль запрещен')
else:print('пароль принят')#5.1
'''
x = int(input("Введите число: "))
print("Двоичное представление:", bin(x))
print("x & 1:", x & 1)
print("x | 1:", x | 1)
print("x ^ 1:", x ^ 1)
print("x << 1:", x << 1)
print("x >> 1:", x >> 1)
if x & 1 == 0:print("Число чётное.")
else:print("Число нечётное.")
